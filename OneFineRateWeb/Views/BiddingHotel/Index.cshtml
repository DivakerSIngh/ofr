                <div class=" col-md-3 col-xs-5 margintop20">
                    <div class="row pull-right">
                        <div class="col-md-2"><img src="../images/trip-adv-icon.png" class="tripadv_icon"></div>
                        <div class="col-md-10"> <em class="whitext marginleft8"> #17 of 99 hotels in Delhi</em></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!--next section-end here-->
    <div class="light_header_bar">
        <div class="container">
            <div class="col-md-12">
                <div class="reviewlist">
                    <ul>
                        <li><a href="#overview">ABOUT HOTEL</a></li>
                        <li><a href="#rooms">AVAILABLE ROOMS</a></li>
                        <li><a href="#rating">FACILITIES</a></li>
                        <li><a href="#rating">POLICIES</a></li>
                        <li><a href="#rating">TRIP ADVISOR REVIEWS</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    @Html.Partial("pvPhotoGallery", Model)
                    @Html.Partial("pvHotelLocationDetails", Model)

                </div>
                @Html.Partial("pvHotelOverview", Model)
                @Html.Partial("pvHotelRooms", Model)

                <div class="col-lg-3 col-md-3 margintop20  whitebg border1 text-center sticky" style="top:-9px; <!-- z-index:-99; position:relative  -->">
                    <div class="col-md-12">
                        <button class="btn btn-success col-md-12" value="Buy This"> Book </button>
