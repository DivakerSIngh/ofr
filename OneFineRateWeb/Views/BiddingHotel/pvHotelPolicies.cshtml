                                    <li>One older child or adult is charged INR @Html.DisplayFor(m => m.dExtraBedCharges) per person per night in an extra bed.</li>
                                    <li>The maximum number of extra beds/cribs in a room is @Html.DisplayFor(m => m.iExtraBedRequiredFrom).</li>
                                </ul>
                            </td>
                        </tr>



                        <tr>
                            <td>Pets</td>
                            <td>:</td>
                            <td>Pets are not @Html.DisplayFor(m => m.bPetsAllowed).</td>
                        </tr>
                        <tr>
                            <td>Cards accepted at this property </td>   
                            <td>:</td>
                            <td>
                                @Html.DisplayFor(m => m.sCreditCardId)                                
                                <a href="#"></a><a href="#"><img src="../images/american-express.png"></a>
                                <a href="#"><img src="../images/visa.png"></a>
                                <a href="#"><img src="../images/mastercard.png"></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
