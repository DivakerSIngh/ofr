@model   OneFineRateBLL.Entities.PropDetailsM
<link href="~/css/responsive-tabs.css" rel="stylesheet" />

<div class="margintop10 marginbottom10 zindex99" id="rating">

    <!-- Nav tabs -->
    <ul class="nav nav-tabs tablebluebg" role="tablist">
        <li role="presentation" ><a href="#tripAdvisory" aria-controls="1" role="tab" data-toggle="tab">Tripadvisor Rating</a></li>
        <li role="presentation"><a href="#facilities" aria-controls="2" role="tab" data-toggle="tab">Hotel Facilities</a></li>
        <li role="presentation" class="active"><a href="#policies" aria-controls="3" role="tab" data-toggle="tab">Policies</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content whitebg">
        <div role="tabpanel" class="tab-pane active" id="policies">
            <div class=" table-responsive">
                <table class="table  table-hover">

                    <tbody>
                        <tr>
                            <td>Check-In</td>
                            <td>:</td>
                            <td>From @Html.DisplayFor(m => m.sCheckInHH):@Html.DisplayFor(m => m.sCheckInMM) </td>
                        </tr>

                        <tr>
                            <td>Check-out</td>
                            <td>:	</td>
                            <td>Until @Html.DisplayFor(m => m.sCheckoutHH):@Html.DisplayFor(m => m.sCheckoutMM)</td>
                        </tr>

                        <tr>
                            <td>Cancellation/ Prepayment</td>
                            <td>:	</td>
                            <td>
                             Cancellation and prepayment policies vary according to room type. Please check what room conditions may apply when selecting room.</td>
                        </tr>

                        <tr>
                            <td>Children and Extra Beds</td>
                            <td>:	</td>
                            <td colspan="2">
                                <ul>
                                    <li>All children are welcome.</li> 
