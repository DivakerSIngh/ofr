@model IEnumerable<OneFineRateBLL.Entities.etblBookingTx>

@if (Model != null && Model.Count()>0)
{
        <div class="col-md-12  margintop-10">
            <div class="tablebluebg">Your Past Saving</div>
            <div class="table table-responsive">

                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <th>Hotel Name, City</th>
                    <th>Published Rate</th>
                    <th>Your Amount</th>
                    <th>Bid Amount</th>
                    <th>You Saved</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.sHotelName, <span class="bluetext">@item.sPropertyCityName</span></td>
                            <td>INR @item.dTotalAmount</td>
                            <td>INR @item.dTotalNegotiateAmount </td>
                            <td>@item.dBidAmount</td>
                            <td>@item.sSavingsInPercentage %</td>
                        </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    
}
else
{
    <div class="row ">
        <div class="col-md-12  margintop-10">
            <div class="tablebluebg">Your Past Saving</div>
            <div class="table table-responsive">

                <table class="table table-bordered table-hover table-striped" id="pastSaving">
                    <tbody>
                        <tr><td colspan="4">No Records found!</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
