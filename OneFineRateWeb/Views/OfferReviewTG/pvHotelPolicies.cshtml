@model OneFineRateBLL.Entities.PropDetailsM
<link href="~/css/responsive-tabs.css" rel="stylesheet" />

<style>
    .borderAround {
        border: none;
    }

    @@media all and (max-width: 800px) {
        .borderAround {
            border-bottom: 1px solid black;
            margin-bottom: 5px
        }

        .tablebluebg1 li a {
            font-size: 13px !important;
            margin-left: 0px !important;
            margin-right: 0px !important;
        }
    }
</style>

<div class="margintop15 marginbottom20" id="rating">

    <!-- Nav tabs -->
    <ul class="nav nav-tabs tablebluebg1" role="tablist">
        <li role="presentation" class="liTrip"><a href="#divTripadvisor" aria-controls="divTripadvisor" role="tab" data-toggle="tab">Tripadvisor Reviews</a></li>
        <li role="presentation" class="liFac"><a href="#divFacilities" aria-controls="divFacilities" role="tab" data-toggle="tab">Hotel Facilities</a></li>
        <li role="presentation" class="liPolicy active"><a href="#divPolicies" aria-controls="divPolicies" role="tab" data-toggle="tab">House Rules</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content whitebg border1">

        <div role="tabpanel" class="tab-pane divPolicy active" id="divPolicies">
            <div class="row">

                @if (!String.IsNullOrEmpty(Model.TG_Hotel.IsFlexibleCheckIn))
                {
                    <div class="col-md-12 col-xs-12">
                        <div class="col-md-2 col-xs-6"><b>Check-In</b></div>
                        <div class="col-md-1 col-xs-1">:</div>
                        <div class="col-md-9 col-xs-12">
                            24 hours Check-In is Available
                        </div>
                    </div>
                    <div class="col-md-12 col-xs-12">
                        <div class="col-md-2 col-xs-6"><b>Check-Out</b></div>
                        <div class="col-md-1 col-xs-1">:</div>
                        <div class="col-md-9 col-xs-12">
                            24 hours Check-Out is Available
                        </div>
                    </div>
                }
                else
                {
                    if (!String.IsNullOrEmpty(Model.TG_Hotel.CheckInTime))
                    {
                        <div class="col-md-12 col-xs-12">
                            <div class="col-md-2 col-xs-6"><b>Check-In</b></div>
                            <div class="col-md-1 col-xs-1">:</div>
                            <div class="col-md-9 col-xs-12">
                                @Model.TG_Hotel.CheckInTime
                            </div>
                        </div>
                    }

                    if (!String.IsNullOrEmpty(Model.TG_Hotel.CheckOutTime))
                    {
                        <div class="col-md-12 col-xs-12">
                            <div class="col-md-2 col-xs-6"><b>Check-out</b></div>
                            <div class="col-md-1 col-xs-1">:</div>
                            <div class="col-md-9 col-xs-12">
                                @Model.TG_Hotel.CheckOutTime
                            </div>
                        </div>
                    }
                }


