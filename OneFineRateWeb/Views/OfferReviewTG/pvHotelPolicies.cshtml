                @*<tr>
                        <td><b>Rooms</b></td>
                        <td>:</td>
                        <td>
                            <label>@Model.TG_Hotel.NumberOfRooms</label>
                        </td>
                    </tr>
                    <tr>
                        <td><b>Floors</b></td>
                        <td>:</td>
                        <td>
                            <label>@Model.TG_Hotel.NumberOfFloors</label>
                        </td>
                    </tr>*@

                <div class="col-md-12 col-xs-12">
                    <div class="col-md-2 col-xs-6"><b>Cancellation</b></div>
                    <div class="col-md-1 col-xs-1">:	</div>
                    <div class="col-md-9 col-xs-12">Cancellation policies vary according to room rate and package.</div>
                </div>

                <div class="col-md-12 col-xs-12">
                    <div class="col-md-2 col-xs-6"><b>Children and Extra Beds</b></div>
                    <div class="col-md-1 col-xs-1">:</div>
                    <div class="col-md-9 col-xs-12">

                        <div>All children are welcome</div>

                        @if (Model.iComplimentaryStayAge != null)
                        {
                            <div> Children upto @Html.DisplayFor(m => m.iComplimentaryStayAge) years stay for free. Extra cot/ bed may be chargeable</div>
                        }

                        @if (Model.iExtraBedRequiredFrom != null)
                        {
                            <div>Extrabed required for children from @Html.DisplayFor(m => m.iExtraBedRequiredFrom) years</div>
                        }

                        @if (Model.iMinCheckInAge != null)
                        {
                            <div>@Html.DisplayFor(m => m.iMinCheckInAge) years is Minimum age of check in</div>
                        }

                    </div>
                </div>


                @if (!string.IsNullOrEmpty(Model.sCreditCardId))
                {
                    <div class="col-md-12 col-xs-12">
                        <div class="col-md-2 col-xs-4"><b>Cards accepted at this property</b> </div>
                        <div class="col-md-1 col-xs-1">:</div>
                        <div class="col-md-9 col-xs-12">
                            @{
                                string[] arr = new string[10];
                                arr = Model.sCreditCardId.Split(',');
                                for (int i = 0; i < arr.Length; i++)
                                {
                                    <a href="#"></a><a href="#"><img src="@(arr[i])"></a>
                                }
                            }

                        </div>
                    </div>
                                }

            </div>
        </div>

        <div role="tabpanel" class="tab-pane divFacility" id="divFacilities">
            <div class="row">
                @if (!string.IsNullOrEmpty(Model.TG_Hotel.AmenityDescription))
                {

                    <div class="col-md-12 col-xs-12">
                        <div class="col-md-2 col-xs-4"><b>Information</b></div>
                        <div class="col-md-1 col-xs-1">:</div>
                        <div class="col-md-9 col-xs-12">
                            @Model.TG_Hotel.AmenityDescription
                        </div>
                    </div>
                }

                @*@foreach (var item in Model.TG_Hotel.HotelAmenities.GroupBy(x => x.sHeader).ToList())
                    {
                        <tr>
                            <td><b>@item.Key</b></td>
                            <td>:</td>
                            <td>
                                <table>
                                    @foreach (var groupByItem in item)
                                    {
                                        <tr><td>@groupByItem.sAmenity</td></tr>
                                    }
                                </table>
                            </td>
                        </tr>
                    }*@

                @foreach (var item in Model.TG_Hotel.HotelAmenities)
                {
                    if (!string.IsNullOrEmpty(item.sHeader))
                    {
                        <div class="col-md-12 col-xs-12">
                            <div class="col-md-2 col-xs-6"><b>@item.sHeader</b></div>
                            <div class="col-md-1 col-xs-1">:</div>
                            <div class="col-md-9 col-xs-12">
                                @item.sAmenity
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
        <div role="tabpanel" class="tab-pane divTrip" id="divTripadvisor">
            <div class="row">

                @for (int rv = 0; rv < Model.lstTripAdvisonReviews.Count; rv++)
                {

                    <div class="col-md-12 col-xs-12">
                        <div class="col-md-12 col-xs-12"><b>Trip Type:</b> @Model.lstTripAdvisonReviews[rv].sTripType </div>
                        <div class="col-md-12 col-xs-12"><img src="@Model.lstTripAdvisonReviews[rv].sRatingImageURL" /> @Model.lstTripAdvisonReviews[rv].sTitle</div>
                        <div class="col-md-12 col-xs-12">by @Model.lstTripAdvisonReviews[rv].sReviewer on @Model.lstTripAdvisonReviews[rv].sDayMonth @Model.lstTripAdvisonReviews[rv].sYear </div>
                        <div class="col-md-12 col-xs-12">
                            @Model.lstTripAdvisonReviews[rv].sText
                            <a target="_blank" href="@Model.lstTripAdvisonReviews[rv].sReviewURL">more</a> »
                            <hr />
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
