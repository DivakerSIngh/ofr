                    html += '<span class="pull-right"><a onclick="moreClick()" href="javascript:void(0)" class="morelink"" >' + moretext + '</a></span>'
                    $('#OverviewText').html('');
                    $('#OverviewText').html(html);
                    shortText = c.length;

