                                }
                                else {
                                    myval += '<li><input type="checkbox" ctype="' + Type + '" onclick="ShowDiv(' + j.Id + ');"  class="ChPref checkbox" name="text1" value="' + j.Id + '" />  ' + j.Name + ' </li>';
