            function ChangeStarType(starNumber) {
                try {
                    $('.starChoice').each(function (i, j) {
                        i++;
                        if (i == starNumber) {
                            $(this)[0].src = '../images/' + starNumber + 'Star-h.png';
                            $('#hdnStarRating').val(starNumber);
