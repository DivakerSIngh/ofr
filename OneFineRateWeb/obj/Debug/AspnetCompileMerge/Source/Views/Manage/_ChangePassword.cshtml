@model OneFineRateWeb.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<div class="tablebluebg accordion margintop20" id="Password">Change Password</div>
<div class="padding10 bookingbxbg">

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "profileForm", id = "frmChangePassword" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.OldPassword)
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", maxlength = "20", placeholder = "Old Password" })
                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "red" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword)
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", maxlength = "20", placeholder = "New Password" })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "red" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", maxlength = "20", placeholder = "Confirm Password" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "red" })
                </div>
            </div>
            </div>
  
        <hr>
        <div class="row">
            <div class="col-md-12 ">
                <button type="button" class="btn btn-danger cancelMyAccountForm marginleft5 cancel pull-right">Cancel</button>
                <button type="submit" class="btn btn-success pull-right">Save</button>
               
            </div>
        </div>
    }
</div>

