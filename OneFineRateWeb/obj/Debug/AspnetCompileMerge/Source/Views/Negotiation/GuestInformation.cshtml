                                    </div>
                                }
                                else if (Model.objBooking.BookingStatus == "CP")
                                {
                                    if (Model.objBooking.ccType == "CA")
                                    {
                                        GrandTotal = clsUtils.ConvertNumberToCommaSeprated(Convert.ToDecimal(Model.objBooking.dTotalNegotiateAmount + finalTaxes));
