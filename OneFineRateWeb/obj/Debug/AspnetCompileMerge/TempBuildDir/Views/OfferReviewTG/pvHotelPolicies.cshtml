                        @if (!string.IsNullOrEmpty(Model.TG_Hotel.AmenityDescription))
                        {
                            <tr>
                                <td style="width:15%;"><b>Information</b></td>
                                <td>:</td>
                                <td>@Model.TG_Hotel.AmenityDescription</td>
                            </tr>
