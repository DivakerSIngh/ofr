    @functions {

        public static string GetDaySuffix(int day)
        {
            switch (day)
            {
                case 1:
                case 21:
                case 31:
                    return "<sup>st</sup>";
                case 2:
                case 22:
                    return "<sup>nd</sup>";
                case 3:
                case 23:
                    return "<sup>rd</sup>";
                default:
                    return "<sup>th</sup>";
            }

        }

        public static string GetFormattedDate(DateTime date)
        {
            return date.DayOfWeek + ", " + date.Day + GetDaySuffix(date.Day) + " " + date.ToString("MMM") + ", " + date.Year;
        }
    }

