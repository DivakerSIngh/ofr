@model OneFineRateWeb.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
}

<div class="tablebluebg accordion margintop20" id="Password">SET PASSWORD</div>
<div class="padding10 bookingbxbg" >

    <p class="text-info">
        You do not have a local username/password for this site. Add a local
        account so you can log in without an external login.
    </p>

    @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "profileForm", id = "frmSetPassword" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword)
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", maxlength = "50", placeholder = "New Password" })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "red" })
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", maxlength = "50", placeholder = "Confirm Password" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "red" })
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-success">Set password</button>
                <button type="button" class="btn btn-primary cancelMyAccountForm marginleft5 cancel">Cancel</button>
            </div>
        </div>
    }
</div>