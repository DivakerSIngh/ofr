@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}
@if (Model != null)
{
    <h2 class="text-danger">ControllerName : @Model.ControllerName</h2><br />
    <h2 class="text-danger">ActionName  : @Model.ActionName</h2><br />
    <h4 class="text-danger">Exception Details : @Model.Exception.Message <br />  @Model.Exception.TargetSite</h4>
}
else
{
    <h1>Error.</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>
}

@TempData["error"]