@model OneFineRateBLL.Entities.etblPropertyWeekendBiddingMap



@using (Ajax.BeginForm("UpdateWeekEndWeekDayBidding", "RateInventoryBid", new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "targetid", HttpMethod = "POST", OnSuccess = "GetResult" }))
{
    @Html.HiddenFor(x => x.dtEffectiveDate)
    @Html.HiddenFor(x => x.bWeekend)

    <div class="modal-dialog modal-lg" style="width: 96%;">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header ">
                <!--         <button type="button" class="close" data-dismiss="modal">&times;</button> -->
                <div class="pull-left">
                    <h4>Weekends/Weekdays Discount</h4>
                </div>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <div class="pull-right blue">28 Jan, 2016</div>
            </div>
            <div class="modal-body">
                <div class="row  paddingbottom10">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover txtcenter">
                                <thead>
                                    <tr>
                                        <th>Current Discount</th>
                                        <th>New Discount</th>
                                        <th>Amenitiy 1</th>
                                        <th>Applicability 1</th>
                                        <th>Amenity 2</th>
                                        <th>Applicability 2</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.dWeekendDiscount %</td>
                                        <td>
                                        @Html.TextBoxFor(m => m.dWeekendDiscount, new { type = "text", @class = "form-control", maxlength = "5", pattern = "[0-9]+([\\.,][0-9]+)?" })
                                        </td>
                                        <td>
                                           @Html.DropDownListFor(m => m.iAmenityId1, new SelectList(OneFineRateBLL.BL_Amenity.GetAllAmenities(), "iAmenityId", "sAmenityName"), "Select Amenity", new { @class = "form-control" })
                                        </td>
                                        <td>
                                          @Html.DropDownListFor(m => m.iApplicabilityId1, new SelectList(OneFineRateBLL.BL_Amenity.GetAllApplicabilities(), "iApplicabilityId", "sApplicability"), "Select Applicability", new { @class = "form-control" })
                                        </td>
                                        <td>
                                           @Html.DropDownListFor(m => m.iAmenityId2, new SelectList(OneFineRateBLL.BL_Amenity.GetAllAmenities(), "iAmenityId", "sAmenityName"), "Select Amenity", new { @class = "form-control" })
                                        </td>
                                        <td>
                                            @Html.DropDownListFor(m => m.iApplicabilityId2, new SelectList(OneFineRateBLL.BL_Amenity.GetAllApplicabilities(), "iApplicabilityId", "sApplicability"), "Select Applicability", new { @class = "form-control" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-xs-3">
                                Close Out
                                @Html.DropDownListFor(m => m.bIsClosed, new List<SelectListItem> {
                                                                            new SelectListItem {Text="Yes",Value="true" },
                                                                            new SelectListItem {Text="No",Value="false" }},
                                                                            new { @class = "form-control " })
                            </div>
                            <div class="col-xs-3">
                                CTA
                                @Html.DropDownListFor(m => m.bCTA, new List<SelectListItem> {
                                                                            new SelectListItem {Text="Yes",Value="true" },
                                                                            new SelectListItem {Text="No",Value="false" }},
                                                                            new { @class = "form-control " })
                            </div>
                            <div class="col-xs-3">
                                CTD
                                @Html.DropDownListFor(m => m.bCTD, new List<SelectListItem> {
                                                                            new SelectListItem {Text="Yes",Value="true" },
                                                                            new SelectListItem {Text="No",Value="false" }},
                                                                            new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-xs-12 marginbottom20 margintop10 text-center">
                            <hr>
                            <input type="submit" class="btn btn-primary margintop10" value="SAVE">
                            <input type="button" class="btn btn-danger margintop10" value="CANCEL" data-dismiss="modal">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="targetid"></div>
}