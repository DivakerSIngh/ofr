    $(document).ready(function () {

        var date = new Date();
        var firstDay = new Date(date.getFullYear(), date.getMonth(), date.getDate());
        var lastDay = "";
        var Y = date.getFullYear();
        var M = date.getMonth();
        if (6 + M > 11) {
            lastDay = new Date(Y + 1, M + 6 - 12, 0);
        }
        else {
            lastDay = new Date(Y, M + 6, 0);
        }

        // Set last date for calendars

