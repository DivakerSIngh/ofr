    <!-- container div END bottom -->
    <!-- Add Taxes -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add Taxes</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-4">
                            Rate Plan
                            <select name="select" class="form-control">
                                <option>Hotel</option>
                                <option>Deluxe</option>
                                <option>Luxury</option>
                            </select>
                        </div>
                        <div class="col-xs-4">
                            Stay From
                            <input type="date" name="textfield" class="form-control">
                        </div>
                        <div class="col-xs-4">
                            Stay To
                            <input type="date" name="textfield" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            Luxury Tax
                            <div class="row">
                                <div class="col-xs-6">
                                    <select name="select" class="form-control">
                                        <option>%</option>
                                        <option>Value</option>
                                    </select>
                                </div>
                                <div class="col-xs-6">
                                    <input type="text" name="textfield" class="form-control">
                                </div>
                            </div>

                        </div>
                        <div class="col-xs-4">
                            Service Tax
                            <div class="row">
                                <div class="col-xs-6">
                                    <select name="select" class="form-control">
