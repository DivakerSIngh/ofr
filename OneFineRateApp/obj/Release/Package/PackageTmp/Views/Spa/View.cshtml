@model OneFineRateBLL.Entities.etblPropertySpaMap

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_LayoutProperty.cshtml";
}

@System.Web.Optimization.Scripts.Render("~/bundles/validation")


@using (Html.BeginForm("Modify", "Spa", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl, id = "myform", role = "form" }))
{
    @Html.HiddenFor(u => u.iPropId);
    @Html.HiddenFor(u => u.dtActionDate);
    @Html.Hidden("InitialSpaName", Model.sSpaName)
    <div class="panel-group" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">

                    Wellness Facilites

                </h4>
            </div>
            <div class="col-xs-12">
                <div class="subheadcolor"><h4>Full Wellness Facilites</h4></div>
                <hr />
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-5">
                        <label> Name of Wellness Facility <span class="star">*</span></label>
                        @Html.TextBoxFor(m => m.sSpaName, new { type = "text", @class = "form-control", maxlength = "200", required = true })
                        @Html.ValidationMessageFor(m => m.sSpaName, "", new { @class = "red" })
                    </div>

                    <!-- <div class="col-xs-3">

                      </div>-->

                    <div class="col-xs-1" style="width:6%;"><b>Timing</b></div>
                    <div class="col-xs-3">
                        @Html.RadioButtonFor(model => model.b24hours, true, new { id = "TermsAndConditions_true" })
                        <label for="24 Hrs">24Hrs</label>

                        @Html.RadioButtonFor(model => model.b24hours, false, new { id = "TermsAndConditions_false" })
                        <label for="Limited">Limited</label>
                    </div>
                    <div class="col-xs3">
                        @Html.CheckBoxFor(m => m.bAdvancedBooking)
                        @Html.Label("lblAdvancedBooking", "Advanced Booking")
                    </div>
                    <div class="col-md-12">
                        <label>   Description <span class="star">*</span></label>
                        @Html.TextAreaFor(m => m.sSpaDesc, new { required = true, @class = "form-control", rows = "4", maxlength = "300" })
                        @Html.ValidationMessageFor(m => m.sSpaDesc, "", new { @class = "red" })
                        <span class="alerttext pull-right">Max 300 Char</span>
                    </div>

                </div>
                <div class="row">

                    <div class="col-xs-4">
                        @Html.CheckBoxFor(m => m.bHotsprings)
                        @Html.Label("lblhotsprings", " Hot springs/ mineral springs in spa")

                    </div>
                    <div class="col-xs-3" style="width:15%;">
                        @Html.CheckBoxFor(m => m.bSauna)
                        @Html.Label("lblsauna", "Sauna in spa")
                    </div>

                    <div class="col-xs-3" style="width:18%;">
                        @Html.CheckBoxFor(m => m.bMudbath)
                        @Html.Label("lblMudbath", "Mud bath in spa")
                    </div>
                    <div class="col-xs-3" style="width:16%;">
                        @Html.CheckBoxFor(m => m.bSpaTub)
                        @Html.Label("lblSpaTub", "Spa tub in spa")
                    </div>

                    <div class="col-xs-3">
                        @Html.CheckBoxFor(m => m.bSteamRoom)
                        @Html.Label("lblSteamRoom", "Steam room in spa")
                    </div>
                </div>

               
               
            </div>
            <!-- Panel 1 div END  -->


        </div>
        <!-- Panel group div END  -->
    </div>
    <div class="row pull-right marginbottom10">
        <div class="col-xs-12 ">
            <input type="submit" class="btn btn-primary" value="Save">

        </div>
    </div>
}

